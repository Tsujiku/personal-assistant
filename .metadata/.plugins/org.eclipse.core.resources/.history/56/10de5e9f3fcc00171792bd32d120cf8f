import java.util.Scanner;

public class Calculator {

	public static void main(String[] args) {
		
		int menuSelection;
		boolean exitCalculator = false;
		
		System.out.println("<Calculator>");
		System.out.println("1. Arithmetic operation");
		System.out.println("2. Unit conversion");
		System.out.println("3. Exit calculator");
		System.out.print("Press 1/2/3: ");
		
		Scanner scan = new Scanner(System.in);
		menuSelection = scan.nextInt();
		
		switch (menuSelection) {
		case 1:
			ArithmeticOperation();
			break;
		
		case 2:
			UnitConversion();
			break;
			
		case 3:
			exitCalculator = true;
			break;

		default:
			System.out.print("Press 1/2/3: ");
			break;
		}
		
		if(exitCalculator) {
			//TODO 클래스 종료시키기
		}
	}

	
	public static void ArithmeticOperation() {
		
		System.out.print("Type your formula: ");
		//TODO
		
		Scanner formulaScan = new Scanner(System.in);
		String inputStr = formulaScan.nextLine();
		
		String[] inputFormula = inputStr.split(" ");
		
		//for Testing
		//for(int i=1; i< inputFormula.length ;i++) {
			//System.out.format("array[%d] = %s%n", i, inputFormula[i]);
		//}
		
		int firstOperand, secondOperand;
		int arithmeticOperator;
		int arithmeticResult = 0;
		
		firstOperand = Integer.parseInt(inputFormula[0]);
		arithmeticOperator = Integer.parseInt(inputFormula[1]);
		secondOperand = Integer.parseInt(inputFormula[2]);
		
		
		switch (arithmeticOperator) {
		case '+':
			arithmeticResult = add(firstOperand, secondOperand);
			break;
			
		case '-':
			arithmeticResult = subtract(firstOperand, secondOperand);			
			break;

			
		case '*':
			arithmeticResult = multiply(firstOperand, secondOperand);
			break;

			
		case '/':
			arithmeticResult = divide(firstOperand, secondOperand);
			break;
		default:
			break;
		}
		
		System.out.format("The answer is: %d", arithmeticResult);
		System.out.println("Continue to Arithmetic?(y/n)");
		String con = formulaScan.next();
		if(con == "y") {
			
		}
		else {}
		
		
	}
	
	public static void UnitConversion() {
		double inputNumber;
		int choice;
		double conversionResult;
		
		System.out.println("1. Pound to Kg");
		System.out.println("2. Kg to Pound");
		System.out.println("3. inch to cm");
		System.out.println("4. cm to inch");
		System.out.println("5. Fahrenheit to Celsius");
		System.out.println("6. Celsius to Fahrenheit");
		System.out.print("Press 1/2/3/4/5/6: ");
		
		Scanner scan = new Scanner(System.in);
		choice = scan.nextInt();
		
		System.out.println("단위를 빼고 입력하세요.");
		inputNumber = scan.nextDouble();
		
		switch (choice) {
		case 1:
			conversionResult = poundTokg(inputNumber);
			break;
		
		case 2:
			conversionResult = kgTopound(inputNumber);
			break;
			
		case 3:
			conversionResult = inchTocm(inputNumber);
			break;

		case 4:
			conversionResult = cmToinch(inputNumber);
			break;
			
		case 5:
			conversionResult = FToC(inputNumber);
			break;
			
		case 6:
			conversionResult = CToF(inputNumber);
			break;
			
		default:
			System.out.print("Press 1/2/3/4/5/6: ");
			break;
		}
	}
	
	public static int add(int firstTerm, int secondTerm) {
		//두 수를 입력받아 더하는 함수
		int addresult;
		addresult = firstTerm+ secondTerm;
		return addresult;
	}
	
	public static int subtract(int firstTerm, int secondTerm) {
		//두 수를 입력받아 빼는 함수
		int subtractResult;
		subtractResult = firstTerm - secondTerm;
		return 0;
	}

	public static int multiply(int firstTerm, int secondTerm) {
		//두 수를 입력받아 곱하는 함수
		int multiplyResult;
		multiplyResult = firstTerm + secondTerm;
		return 0;
	}
	
	public static int divide(int firstTerm, int secondTerm) {
		//두 수를 입력받아 나누는 함수
		
		return 0;
	}
	
